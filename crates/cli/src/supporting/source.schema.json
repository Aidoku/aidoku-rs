{
	"$schema": "http://json-schema.org/draft-07/schema",
	"title": "Aidoku source JSON specification",
	"definitions": {
		"sourceInfo": {
			"type": "object",
			"properties": {
				"id": {
					"type": "string"
				},
				"name": {
					"type": "string"
				},
				"altNames": {
					"type": "array",
					"items": {
						"type": "string"
					}
				},
				"version": {
					"type": "integer",
					"minimum": 1
				},
				"url": {
					"type": "string"
				},
				"urls": {
					"type": "array",
					"items": {
						"type": "string"
					}
				},
				"languages": {
					"type": "array",
					"items": {
						"type": "string"
					}
				},
				"contentRating": {
					"type": "integer",
					"minimum": 0,
					"maximum": 2
				},
				"minAppVersion": {
					"type": "string",
					"pattern": "\\d\\.\\d"
				},
				"maxAppVersion": {
					"type": "string",
					"pattern": "\\d\\.\\d"
				}
			},
			"required": ["id", "name", "version", "languages"],
			"oneOf": [
				{
					"required": ["url"]
				},
				{
					"required": ["urls"]
				}
			]
		},
		"listing": {
			"type": "object",
			"properties": {
				"id": {
					"type": "string"
				},
				"name": {
					"type": "string"
				},
				"type": {
					"type": "integer",
					"minimum": 0,
					"maximum": 1
				}
			},
			"required": ["id"]
		},
		"config": {
			"type": "object",
			"properties": {
				"languageSelectType": {
					"type": "string",
					"enum": ["single", "multi"],
					"description": "Whether the language selection setting should allow multiple languages or a single language to be selected. Default is 'single'."
				},
				"allowsBaseUrlSelect": {
					"type": "boolean"
				},
				"breakingChangeVersion": {
					"type": "integer",
					"minimum": 1
				}
			}
		}
	},
	"type": "object",
	"properties": {
		"info": {
			"$ref": "#/definitions/sourceInfo"
		},
		"listings": {
			"type": "array",
			"items": {
				"$ref": "#/definitions/listing"
			}
		},
		"config": {
			"$ref": "#/definitions/config"
		}
	},
	"required": ["info"]
}
